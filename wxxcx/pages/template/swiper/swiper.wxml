<template name="banner-swiper">
    <swiper class="swiper"
        indicator-dots="true"
        autoplay="true" 
        interval="3000" 
        duration="500"
        circular=true
        >
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image"/>
            </swiper-item>
        </block>
    </swiper>
</template>